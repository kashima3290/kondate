= render "shared/header"
.ui.four.stackable.cards{style: "margin: 10px 10px;"}
  - @menus.each do |menu|
    .orange.card
      %a.image
        = image_tag menu.menu_images[0].image.url, class: "ui medium image change-image", style: "height: 230px;"
      .content
        %a.header
          = menu.name
        .meta
        .description{style: "height: 40px;"}
          - if menu.text.present?
            %a= menu.text
= link_to new_menu_path do
  %button.circular.ui.icon.massive.red.button{style: "position: fixed; right: 5%; bottom: 5%;"}
    %i.plus.icon