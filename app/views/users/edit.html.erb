<div>
  <div class="ui center aligned grid" style="padding-top: 5%;">
    <div class="sixteen wide column">
    </div>
  </div>
  <div class="ui container grid">
    <div class="six wide column"  style="padding-top: 5%;">
      <%= form_with model: @user do |f| %>
        <div class="ui special cards">
          <div class="card">
              <div class="blurring dimmable image">
                <div class="ui dimmer">
                  <div class="content">
                    <div class="center">
                      <div class="ui inverted button">
                        <%= f.label :icon, "変更" %>
                        <%= f.file_field :icon, style: "display:none;" %>
                      </div>
                    </div>
                  </div>
                </div>
                <% if current_user.icon.present? %>
                  <%= image_tag current_user.icon.url, class: "ui small circular image" %>
                  <%= f.file_field :icon %>
                <% else %>
                  <%= image_tag 'dummyhuman.png', class: "ui small circular image" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="ten wide column">
          <div class="ui container form">
            <div class="required field">
              <label>名前</label>
              <%= f.text_field :name, placeholder: "guest" %>
            </div>
            <div class="required field">
              <label>メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example.com" %>
            </div>
            <div class="field">
              <label>コメント</label>
              <%= f.text_area :text, placeholder: "私の名前は〜" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

